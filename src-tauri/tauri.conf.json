{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TSticky notes app",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  

  "app": {
    "windows": [
      {
        "title": "Sticky note",
        "url": "/note.html",
        "width": 300,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
